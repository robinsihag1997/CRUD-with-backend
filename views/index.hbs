<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.9.0/bootstrap-table.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css"
    />
  </head>

  <body>
    <div class="container mt-4">
      <div class="card">
        <div class="card-header">
          Crud

          <a
            class="btn btn-primary"
            href="/create"
            style="float: right;"
          >Add</a>
        </div>
        <div class="card-body">
          <table class="table" id="table">
            <thead>
              <tr class="table-active">
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact No</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each cruds}}
                <tr>
                  <th>{{this._id}}</th>
                  <td><img
                      style="width: 50px;"
                      src="{{this.image}}"
                      alt="{{this.name}}"
                    /></td>
                  <td>{{this.name}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.contact}}</td>
                  <td>
                    <a
                      href="/edit/{{this._id}}"
                      class="btn btn-warning"
                    >Edit</a>
                    <button
                      class="btn btn-danger"
                      onclick="document.getElementById('crud-{{this._id}}').submit()"
                    >Delete</button>

                    <form
                      action="/destroy/{{this._id}}"
                      method="post"
                      id="crud-{{this._id}}"
                    >

                    </form>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    ></script>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"
    ></script>
    <script
      src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"
    ></script>

    <script>
      $(document).ready(function () { var table = $('#table').DataTable({
      select: false, "columnDefs": [{ className: "Name", "targets": [0],
      "visible": false, "searchable": false }] }); });
    </script>
  </body>

</html>